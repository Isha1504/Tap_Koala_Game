<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040000"
    android:onClick="startbtnclick"
    tools:context=".StartPage">

    <TextView
        android:id="@+id/restextid"
        android:layout_width="328dp"
        android:layout_height="178dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="401dp"
        android:gravity="center"
        android:shadowColor="#F3EFEF"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="START THE GAME?"
        android:textColor="#4CAF50"
        android:textSize="50dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/startid"
        android:layout_width="182dp"
        android:layout_height="87dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="278dp"
        android:background="#CDDC39"
        android:onClick="StartGame"
        android:shadowColor="#FFFFFF"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="10"
        android:text="START"
        android:textColor="#FF5722"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restextid"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>